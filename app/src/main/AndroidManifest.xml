<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zloj.googlecloudmessagetest" >

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MAKE_LOCK"/>

    <permission android:name="com.example.zloj.googlecloudmessagetest.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.zloj.googlecloudmessagetest.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.example.zloj.googlecloudmessagetest.permission.RECEIVE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<meta-data-->
            <!--android:name="com.google.android.gms.version"-->
            <!--android:value="@integer/google_play_services_version" />-->

        <!-- Handles messages sent from GCM to your application -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="com.example.zloj.googlecloudmessagetest" />
            </intent-filter>
        </receiver>
        <!-- Enables various aspects of handling messages -->
        <service
            android:name="com.example.zloj.googlecloudmessagetest.gcm.GCMListener"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- Handle the creation, rotation, and updating of registration tokens -->
        <service
            android:name="com.example.zloj.googlecloudmessagetest.gcm.InstanceListener"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <service
            android:name="com.example.zloj.googlecloudmessagetest.gcm.MyIntentService"
            android:enabled="true">
        </service>
    </application>

</manifest>
